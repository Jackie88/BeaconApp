<mvc:View controllerName="sap.ui.apouni.view.Detail" xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	xmlns="sap.m">
	
	<App>
		<Page>
			<content>
	
				<ObjectHeader title="{Firstname} {Lastname}" number="{Id}">
					<attributes>
						<ObjectAttribute text="{DealerCentrum}" />
					</attributes>
				</ObjectHeader>
	
				<IconTabBar id="idIconTabBar">
					<items>
						<IconTabFilter key="dealer" icon="sap-icon://home">
							<content>
								<!-- tu wstaw dane adresowe -->
								<l:Grid>
									<l:content>
										<f:SimpleForm title="Dealer Address Data">
											<f:content>
												<Label text="Street" />
												<Text text="{Street}" />
												<Label text="City" />
												<Text text="{City}" />
												<Label text="Country" />
												<Text text="{Country}" />
											</f:content>
											</f:SimpleForm>
											<f:SimpleForm title="Dealer Communication Data">
											<f:content>
												<Label text="Phone" />
												<Text text="{Phone}" />
												<Label text="Email" />
												<Text text="{Email}" />
											</f:content>
										</f:SimpleForm>
									</l:content>
								</l:Grid>
							</content>
						</IconTabFilter>
						<IconTabFilter key="vehicle" icon="sap-icon://car-rental">
							<content>
								<Table id="vehTable" items="{/VehicleSet}">  
							         <columns>  
							             <Column><Text text="VIN" /></Column>  
							             <Column><Text text="Model" /></Column>  
										 <Column><Text text="Model type" /></Column>
										 <Column><Text text="Production date" /></Column>                        
							         </columns>  
							         <items>  
							             <ColumnListItem>  
							                 <cells>  
							                     <Text text="{VIN}" />  
							                     <Text text="{Model}" />  
							                     <Text text="{ModelType}" />  
							     				<Text text="{ProductionDate}" />
							                 </cells>  
							             </ColumnListItem>  
							         </items>  
							     </Table>  
							</content>
						</IconTabFilter>
					</items>
				</IconTabBar>
			</content>
			<footer>
				<Bar>
				</Bar>
			</footer>
		</Page>
	</App>
</mvc:View>