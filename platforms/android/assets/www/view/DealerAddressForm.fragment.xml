<core:FragmentDefinition
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">

	<l:Grid
		defaultSpan="L12 M12 S12"
		width="auto">
		<l:content>
			<f:SimpleForm
				minWidth="1024"
				maxContainerCols="2"
				editable="false"
				layout="ResponsiveGridLayout"
				title="Firm Address Data"
				labelSpanL="3"
				labelSpanM="3"
				emptySpanL="4"
				emptySpanM="4"
				columnsL="1"
				columnsM="1">
				<f:content>
					<Label text="Street" />
					<Text text="{Street}" />
					<Label text="City" />
					<Text text="{City}" />
					<Label text="Country" />
					<Text text="{Country}" />
				</f:content>
				</f:SimpleForm>
				<f:SimpleForm
				minWidth="1024"
				maxContainerCols="2"
				editable="false"
				layout="ResponsiveGridLayout"
				title="Firm Communication Data"
				labelSpanL="3"
				labelSpanM="3"
				emptySpanL="3"
				emptySpanM="3"
				columnsL="1"
				columnsM="1">
				<f:content>
					<Label text="Phone" />
					<Text text="{Phone}" />
					<Label text="Email" />
					<Text text="{Email}" />
					<Button text="add contact" icon="sap-icon://add-contact" />
				</f:content>
			</f:SimpleForm>
		</l:content>
	</l:Grid>

</core:FragmentDefinition>